{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "maxSize": 104857600,
    "include": ["src/**/*/*.ts"],
    "ignore": ["dist", "test", "*.d.ts", "*.test.*"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "bracketSameLine": true,
      "attributePosition": "multiline",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "quoteProperties": "asNeeded"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noDoubleEquals": "off",
        "noPrototypeBuiltins": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noParameterAssign":"info"
      },
      "performance": {
        "noDelete": "off"
      },
      "complexity": {
        "noThisInStatic": "off",
        "noStaticOnlyClass": "off",
        "noForEach": "off"
      },
      "correctness": {
        "noUnnecessaryContinue": "off"
      }
    }
  }
}
