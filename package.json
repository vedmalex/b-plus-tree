{
	"name": "b-pl-tree",
	"version": "1.2.0",
	"description": "Production-ready B+ Tree with full transactional support, Copy-on-Write operations, and 2PC (Two-Phase Commit)",
	"main": "./dist/index.js",
	"types": "./types/index.d.ts",
	"scripts": {
		"prepublish": "npm run clean && npm run build",
		"build": "bun build.ts && tsc -p tsconfig.json",
		"watch": "tsc -w -p tsconfig.json",
		"clean": "git clean -dfqX -- {types,dist}/** && rm -rf tsconfig.tsbuildinfo dist types",
		"test": "vitest",
		"test:debug": "DEBUG_BTREE=true vitest",
		"test:verbose": "VERBOSE_BTREE=true vitest",
		"test:silent": "NODE_ENV=production vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vedmalex/b-plus-tree.git"
	},
	"files": ["dist", "types"],
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "^1.2.2",
		"@types/jest": "^29.5.14",
		"@types/node": "^18.11.18",
		"@vitest/coverage-c8": "^0.33.0",
		"axios": "^1.2.2",
		"benchmark": "^2.1.4",
		"bintrees": "^1.0.2",
		"chokidar": "^3.5.3",
		"commander": "^9.4.1",
		"jest": "^29.7.0",
		"sorted-btree": "^1.8.1",
		"typescript": "next",
		"vitest": "^3.1.4"
	},
	"dependencies": {},
	"author": "Alex Vedmedenko",
	"license": "MIT"
}
